<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:descendantFocusability="blocksDescendants">




    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:background="#000000"

        android:focusable="false"
        android:focusableInTouchMode="false"
        android:foregroundGravity="center"
        android:measureAllChildren="true"
        android:clickable="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"

            >



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Bangla"
                    android:id="@+id/stc_bangle"
                    android:textColor="#ffffff"
                    android:background="#808080"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:id="@+id/stc_bangle_imageview"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Bissho\n Cup"
                    android:id="@+id/stc_crk_bisshocup"
                    android:textColor="#ffffff"
                    android:background="#808080"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:id="@+id/stc_crk_bisshocup_imageiview"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Eid"
                    android:id="@+id/stk_eid"
                    android:textColor="#ffffff"
                    android:background="#808080" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:id="@+id/stk_eid_imageview"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Events"
                    android:id="@+id/stk_events"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:lines="2"
                    android:background="#808080"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:id="@+id/stk_events_imageview"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Funny"
                    android:id="@+id/stc_funny"
                    android:textColor="#ffffff"
                    android:background="#808080"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:id="@+id/stc_funny_imageView"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Islamic"
                    android:gravity="center"
                    android:id="@+id/stc_islamic"
                    android:singleLine="false"
                    android:textColor="#ffffff"
                    android:background="#808080" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:id="@+id/stc_islamic_imageView"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Love"
                    android:gravity="center"
                    android:id="@+id/stc_love"
                    android:textColor="#ffffff"
                    android:background="#808080"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:id="@+id/stc_love_imageview"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>



    <GridView
        android:id="@+id/gridView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontalScrollView"
        android:drawSelectorOnTop="true"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="2dp"
        android:clickable="true"
        android:layout_marginTop="20dp"
        android:descendantFocusability="blocksDescendants"/>





    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>